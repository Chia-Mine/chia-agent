{
  "compilerOptions": {
    "outDir": "./build",
    "module": "CommonJS",
    "target": "es2020",
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
